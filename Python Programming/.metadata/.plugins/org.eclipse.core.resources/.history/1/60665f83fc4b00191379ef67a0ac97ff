class Person:
    name = ''
    job = ''
    pay = ''
    
    def __init__(self, name, job, pay):
        self.name = name
        self.job = job
        self.pay = pay
        
    def hola(self):
        print(self.name)



osvaldo = Person("Osvaldo", "Programador", 1000) #Instancia de un objeto Person

print(osvaldo.name)
